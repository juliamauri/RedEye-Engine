{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "windows-base",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-base",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_MAKE_PROGRAM": "/usr/bin/ninja"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "x86",
      "hidden": true,
      "architecture": {
        "value": "x86",
        "strategy": "external"
      }
    },
    {
      "name": "x64",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "opengl",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_OPENGL": "ON"
      }
    },
    {
      "name": "vulkan",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_VULKAN": "ON"
      }
    },
    {
      "name": "x86-debug-windows",
      "displayName": "Win-32 Debug",
      "inherits": [ "windows-base", "x86", "debug", "opengl", "vulkan" ]
    },
    {
      "name": "x86-release-windows",
      "displayName": "Win-32 Release",
      "inherits": [ "windows-base", "x86", "release", "opengl", "vulkan" ]
    },
    {
      "name": "x64-debug-windows",
      "displayName": "Win-64 Debug",
      "inherits": [ "windows-base", "x64", "debug", "opengl", "vulkan" ]
    },
    {
      "name": "x64-release-windows",
      "displayName": "Win-64 Release",
      "inherits": [ "windows-base", "x64", "release", "opengl", "vulkan" ]
    },
    {
      "name": "x86-linux",
      "inherits": "linux-base",
      "hidden": true,
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-m32",
        "CMAKE_CXX_FLAGS": "-m32"
      }
    },
    {
      "name": "x64-linux",
      "inherits": "linux-base",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "x86-debug-linux",
      "displayName": "Linux-32 Debug",
      "inherits": [ "x86-linux", "debug", "opengl", "vulkan" ]
    },
    {
      "name": "x86-release-linux",
      "displayName": "Linux-32 Release",
      "inherits": [ "x86-linux", "release", "opengl", "vulkan" ]
    },
    {
      "name": "x64-debug-linux",
      "displayName": "Linux-64 Debug",
      "inherits": [ "x64-linux", "debug", "opengl", "vulkan" ]
    },
    {
      "name": "x64-release-linux",
      "displayName": "Linux-64 Release",
      "inherits": [ "x64-linux", "release", "opengl", "vulkan" ]
    }
  ]
}
